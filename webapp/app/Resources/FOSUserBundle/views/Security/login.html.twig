{% trans_default_domain 'FOSUserBundle' %}

{% block login %}
<section class="panel panel-default">
        <div class="panel-heading">
            Aanmelden
        </div>
        <div class="panel-body">
            <form class="form-horizontal login-form" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate')}}" />
                <div class="form-group">
                    <div class="col-md-12">
                        <input class="form-control" type="text" id="username" name="_username" required="required" autocomplete="off" placeholder="{{ 'security.login.username'|trans }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="password" class="form-control" id="password" placeholder="{{ 'security.login.password'|trans }}" autocomplete="off" name="_password" required="required" >
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                </div>    
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-primary btn-wide"id="_submit" name="_submit" value="Aanmelden" />
                    </div>
                </div>
                <p class="text-center">
                    <a href="/register">Heeft u nog geen account?</a>
                </p>
            </form>
        </div>
    </section>
{% endblock %}

{% block fos_user_content %}
{% endblock fos_user_content %}
