{% extends "::base.html.twig" %}
{% block styles %}
    {{ parent() }}
    <link href={{ asset('vendor/fullcalendar-2.5.0/fullcalendar.css') }} rel='stylesheet'/>
    <link href={{ asset('vendor/fullcalendar-2.5.0/fullcalendar.print.css') }} rel='stylesheet' media='print'/>
    <script src={{ asset('vendor/fullcalendar-2.5.0/lib/moment.min.js') }}></script>
    <script src={{ asset('vendor/fullcalendar-2.5.0/lib/jquery.min.js') }}></script>
    <script src={{ asset('vendor/fullcalendar-2.5.0/fullcalendar.min.js') }}></script>
    <script src={{ asset('vendor/fullcalendar-2.5.0/lang/nl.js') }}></script>
    <link href={{ asset('css/calendarStyles.css') }} rel='stylesheet'/>
{% endblock %}
    {% block breadcrumbs %}
        <ul class="breadcrumb visible-lg visible-md visible-sm">
            <li>
                <a href="{{ path(app.request.attributes.get('_route'))}}">
                    Afspraak maken
                </a>
            </li>
        </ul>
        <ul class="breadcrumb visible-xs">
            <li>
                <a href="{{ path(app.request.attributes.get('_route'))}}">
                    Uw afspraken
                </a>
            </li>
        </ul>
    {% endblock %}
{% block body %}
    <!-- render all apointments -->
    <div class="modal" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Afspraak verwijderen</h4>
                </div>

                <div class="modal-body">
                    <p>U staat op het punt de afspraak te verwijderen.</p>
                    <p>Weet u dit zeker ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onClick="annulation()">Annuleren</button>
                    <a id="deleteAppointment" class="btn btn-danger btn-ok" onClick="deleteAppointment()">Verwijderen</a>
                </div>
            </div>
        </div>
    </div>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-md-6 col-md-offset-3">
                    <section class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    {% if is_granted("ROLE_USER") == false %}
                                        <a style="margin-top: 20px" class="btn btn-primary btn-wide" href="/aanmelden">
                                            Meld je aan om een afspraak te maken
                                        </a>
                                    {% else %}
                                        <div class="clearfix">
                                            Uw afspraken, momenteel heeft u er {{ appointments|length }}.
                                            <a data-toggle="tooltip" title="Nieuwe afspraak" class="btn btn-xs btn-primary pull-right" href="/afspraak-cal">
                                                <span class="pull-right"><i class="fa fa-plus-square-o"></i></span>
                                            </a>
                                        </div>

                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                {% for appointment in appointments %}
                    <div class="col-sm-12 col-md-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading clearfix">
                                <h3 class="panel-title">{{ appointment.start|date('d-m-Y H:i') }}
                                    <span class="text-muted"> Start</span>
                                    <input type="button" value="Verwijder" name="delete" class="btn btn-xs btn-danger fa-trash pull-right" onClick="showConfirmation({{appointment.id}})"/>
                                </h3>
                            </div>
                            <div class="panel-body">

                                        <div class="text-right">
                                            <label for="inputFirstName" class="col-sm-12 form-control text-right">
                                                <span class="pull-left">{{ appointment.room|capitalize }}<span class="text-muted"> Plaats</span></span>
                                                <span class="text-muted">Einde </span>{{ appointment.end|date('d-m-Y H:i') }}
                                            </label>
                                        </div>
                                        <div class="text-right">
                                            <label for="inputFirstName" class="col-sm-12 form-control text-right">
                                                <span class="pull-left text-muted">Dokter</span>{{ appointment.doctorId }}
                                            </label>
                                        </div>
                                        <div class="text-right">
                                            <label for="inputFirstName" style="height: 100%" class="col-sm-12 form-control text-right">
                                                <span class="pull-left text-muted">Boodschap</span>{{appointment.message }}
                                            </label>
                                        </div>

                            </div>
                        </div>
                    </div>
                {% endfor %}
                <!-- end repeat -->
            </div>
        </div>
    </section>
    <script>

        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });

        var id;
        function showConfirmation(appointmentId) {
            document.getElementById("confirm-delete").style.display = "block";
            id = appointmentId;
        }

        function annulation() {
            document.getElementById("confirm-delete").style.display = "";
        }
        function deleteAppointment() {
            $.ajax({
                url: "http://localhost:8000/api/appointments/" + id,
                type: 'delete',
                dataType: "json",
                processData: false,
                beforeSend: function (request) {
                    request.setRequestHeader("Content-Type", "application/json");
                },
                success: function (msg) {
                    //$("#results").append("The result = " + msg);
                }
            });
            location.reload();
        }
    </script>


{% endblock %}