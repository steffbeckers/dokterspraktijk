<!-- base.html.twig -->

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    {% block title %}<title> Dokter </title>{% endblock %}
    <link rel="shortcut icon" href={{asset("images/favicon.png")}}>
    {% block styles %}
    <!-- jQuery -->
    <script src={{asset("js/jquery/jquery-2.1.3.min.js")}} type="text/javascript"></script>
    <script src={{asset("js/jquery/jquery-ui.min.js")}} type="text/javascript"></script>
    <!-- Bootstrap -->
    <link href={{asset("bootstrap/css/bootstrap.min.css")}} rel="stylesheet">
    <script src={{asset("bootstrap/js/bootstrap.min.js")}}></script>
    <!-- Styles -->
    <link href={{asset("css/font-awesome.css")}} rel="stylesheet">
    <link href={{asset("css/styles.css")}} rel="stylesheet">
    {% endblock %}

</head>
<body>
    {% block header %}

        <header id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="logo">
                        <h1>
                            <a href="#">
                                Dokterspraktijk
                            </a>
                        </h1>
                    </div>
                </div>
                <div class="col-md-8">
                    <ul class="nav nav-pills pull-right">
                        <li {% if app.request.get('_route') == 'homepage' %} class="active" {% endif %}>
                            <a href="/">
                                Startpagina
                            </a>
                        </li>
                        <li {% if app.request.get('_route') == 'afspraak-maken' %} class="active" {% endif %}>
                            <a href="/afspraak-maken">
                                Afspraak maken
                            </a>
                        </li>
                        <li {% if app.request.get('_route') == 'contact' %} class="active" {% endif %}>
                            <a href="/contact">
                                Contact
                            </a>
                        </li>
                        {% if is_granted("ROLE_USER") %}
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-user"></i>{{app.user.username}}<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a href="/showUser"><i class="fa fa-cog"></i>Instellingen</a></li>
                                <li class="divider"></li>
                                <li><a href="/logout"><i class="fa fa-sign-out"></i>Afmelden</a></li>
                            </ul>
                        </li>
                        {% else %}
                        <li {% if app.request.get('_route') == 'aanmelden' %} class="active" {% endif %}>
                            <a href="/aanmelden">
                                Aanmelden
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <header id="sub">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    {% block breadcrumbs %}
                    <ul class="breadcrumb">
                        <li>
                            <a href="{{ path(app.request.attributes.get('_route'))}}">
                                Startpagina
                            </a>
                        </li>
                    </ul>
                    {% endblock %}
                </div>
                <div class="col-md-6">
                    <div class="searchbar">
                        <form class="navbar-form navbar-right" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Zoeken">
                                <a href="#"><i class="fa fa-search"></i></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    {% endblock %}
    {% block body   %}{% endblock %}
    {% block footer %}
    <footer id="footer">
        <div class="copy text-center">
            &copy; 2015 - Dokterspraktijk - <a href="/meettheteam">Meet the team</a>
        </div>
    </footer>
    {% endblock %}
</body>
</html>