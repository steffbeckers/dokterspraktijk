<!-- base.html.twig -->

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    {% block title %}<title> Dokter </title>{% endblock %}
    <link rel="shortcut icon" href={{asset("images/favicon.png")}}>
    {% block styles %}
    <!-- jQuery -->
    <script src={{asset("js/jquery/jquery-2.1.3.min.js")}} type="text/javascript"></script>
    <script src={{asset("js/jquery/jquery-ui.min.js")}} type="text/javascript"></script>
    <!-- Bootstrap -->
    <link href={{asset("bootstrap/css/bootstrap.min.css")}} rel="stylesheet">
    <script src={{asset("bootstrap/js/bootstrap.min.js")}}></script>
    <!-- Styles -->
    <link href={{asset("css/font-awesome.css")}} rel="stylesheet">
    <link href={{asset("css/styles.css")}} rel="stylesheet">
    {% endblock %}

</head>
<body>
    {% block header %}

        <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img src="images/icon.png"/> Dokterspraktijk</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li {% if app.request.get('_route') == 'homepage' %} class="active" {% endif %}><a href="/">Startpagina</a></li>
                    <li {% if app.request.get('_route') == 'afspraak-maken' %} class="active" {% endif %}><a href="/afspraak-maken">Afspraak maken</a></li>
                    <li {% if app.request.get('_route') == 'contact' %} class="active" {% endif %}><a href="/contact">Contact</a></li>
                    {% if is_granted("ROLE_USER") %}
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">{{app.user.username | capitalize}}<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/showUser">Instellingen</a></li>
                            <li><a href="/logout">Afmelden</a></li>
                        </ul>
                    </li>
                    {% else %}
                    <li {% if app.request.get('_route') == 'aanmelden' %} class="active" {% endif %}>
                        <a href="/aanmelden">
                            Aanmelden
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <header id="sub">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-8 col-xs-12">
                    {% block breadcrumbs %}
                    <ul class="breadcrumb">
                        <li>
                            <a href="{{ path(app.request.attributes.get('_route'))}}">Startpagina</a>
                        </li>
                    </ul>
                    {% endblock %}
                </div>
                <div id="search" class="col-md-6 col-sm-4 col-xs-12">
                    <div class="searchbar">
                        <form class="navbar-form pull-right" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control">
                                <a href="#"><span class="fa fa-search"></span></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    {% endblock %}
    {% block body   %}{% endblock %}
    {% block footer %}
    <footer id="footer">
        <div class="copy text-center">
            &copy; 2015 - Dokterspraktijk - <a href="/meettheteam">Meet the team</a>
        </div>
    </footer>
    {% endblock %}
</body>
</html>